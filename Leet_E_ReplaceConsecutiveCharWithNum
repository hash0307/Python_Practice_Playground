# output_data = replace_consecutive_repeats(input_data)
# print(output_data)  # Expected Output: "ABA2B3C2"


def replace_consecutive_repeats(input_list):
    output = ""
    prev_char = None
    count = 1

    for i, char in enumerate(input_list):
        if char == prev_char:  # If it's the same as the previous character
            count += 1
        else:
            if count > 1:  # If previous character had repetitions, append count
                output += str(count)
            output += char  # Append new character
            count = 1  # Reset count for a new character
        prev_char = char  # Update previous character

    if count > 1:  # Append the last count if needed
        output += str(count)

    return output

# Example usage:
input_data = list("ABAABBBCC")  # Convert string to list of characters
output_data = replace_consecutive_repeats(input_data)
print(output_data)  # Expected Output: "ABA2B3C2"


